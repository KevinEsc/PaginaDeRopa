# Variables de entorno — Copia a .env y completa con tus valores

# Puerto en el que corre el servidor
PORT=3000

# URLs base
BASE_URL=http://localhost:3000

# Credenciales de Shopify (obtén desde Shopify Partner)
SHOPIFY_API_KEY=tu_api_key_aqui
SHOPIFY_API_SECRET=tu_api_secret_aqui
SHOPIFY_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Scopes de Shopify (separados por comas)
# Ejemplos: read_products,write_orders,read_customers
SHOPIFY_SCOPES=read_products,write_orders,read_customers
